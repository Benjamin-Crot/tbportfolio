<div class="main-container">
  <div class="title">
    <h2>Besoin de plus d'information ?</h2>
    <h2 class="purple">Envoyez-nous un message</h2>
  </div>

  <div class="container" style="margin-bottom: 30px;">
    <%= simple_form_for @contact do |f| %>
      <div class="row" style="margin-bottom: 30px;">
        <div class="col-12 col-md-6">
          <%= inline_svg_tag "letter.svg", class: 'letter-svg' %>
        </div>
        <div class="col-12 col-md-6" style="margin: auto;">
          <%= f.input :last_name, label: 'Nom', placeholder: 'Paul' %>
          <%= f.input :first_name, label: 'PrÃ©nom', placeholder: 'Dupont' %>
          <%= f.input :email, label: 'Email', placeholder: 'paul.dupont@email.com', required: false %>
        </div>
      </div>
      <%= f.input :message, label: 'Message', placeholder: 'Votre message', required: false %>
      <%= f.button :submit, 'Envoyer', class:"btn-cta large" %>
    <% end %>
  </div>
</div>


